{{ 'slideshow.css' | asset_url | stylesheet_tag }}
<script src="{{ 'slideshow-component.js' | asset_url }}" defer="defer"></script>

<slideshow-component
  id="slideshow-{{ section.id }}"
  class="slideshow flex-item slideshow--{{ section.settings.slide_height }}"
  data-active-slide="0"
  data-autoplay="{{ section.settings.autoplay }}"
  data-transition-style="{{ section.settings.transition_style }}"
  {% if section.settings.autoplay %}
    aria-live="polite"
    data-autoplay-speed="{{ section.settings.autoplay_speed }}"
  {% endif %}
>
  <div class="slideshow__slides">
    {% content_for "blocks" %}
  </div>

  {% if section.blocks.size > 1 %}
    {% content_for "block", type: "slideshow-controls", id: "controls-for-slideshow" %}
  {% endif %}
</slideshow-component>

{% schema %}
{
  "name": "Slideshow",
  "class": "section--group",
  "blocks": [{ "type": "slide" }],
  "settings": [
    {
      "type": "select",
      "id": "slide_height",
      "options": [
        {
          "value": "adapt_image",
          "label": "Adapt to first image"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium",
      "label": "Slide height"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 30
    },
    {
      "type": "header",
      "content": "Slideshow style"
    },
    {
      "type": "select",
      "id": "transition_style",
      "options": [
        {
          "value": "left",
          "label": "Slide left"
        },
        {
          "value": "right",
          "label": "Slide right"
        },
        {
          "value": "top",
          "label": "Slide up"
        },
        {
          "value": "bottom",
          "label": "Slide down"
        }
      ],
      "label": "Transition",
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay speed",
      "min": 3,
      "max": 7,
      "step": 1,
      "unit": "s",
      "default": 5
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide",
          "blocks": [
            {
              "type": "group",
              "settings": {
